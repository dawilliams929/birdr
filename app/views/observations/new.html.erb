<%= form_for @observation do |f| %>
	<%= f.label :user_id %>
	<%= f.select :user_id, (1..10).to_a %>
	<br>
	<%= f.label "Location" %>
	<%= f.collection_select :location_id, @locations, :id, :name %>
	<br>
	<%= f.label :date %>
	<%= f.date_field :date  %>
	<br>
	<%= f.submit "Submit observation" %>
<% end %>