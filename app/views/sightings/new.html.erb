<%= form_for @sighting do |f| %>
	<%= f.label "Species" %>
	<%= f.collection_select :species_id, @species, :id, :to_s %>
	<br>
	<%= f.label :count %>
	<%= f.number_field :count, min: 0 %>
	<br>
	<%= f.label "observation id" %>
	<%= f.number_field :observation_id %>
	<br>
	<%= f.submit "Add sighting" %>
<% end %>